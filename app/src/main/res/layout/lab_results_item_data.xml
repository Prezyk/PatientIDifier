<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewResultUpperLimit"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textViewResultLowerLimit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewResultLowerLimit"
        app:layout_constraintTop_toTopOf="@+id/textViewResultLowerLimit" />

    <TextView
        android:id="@+id/textViewResultLowerLimit"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textViewResultUnit"
        app:layout_constraintStart_toEndOf="@+id/textViewResultUnit"
        app:layout_constraintTop_toTopOf="@+id/textViewResultUnit" />

    <TextView
        android:id="@+id/textViewResultUnit"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textViewResultValue"
        app:layout_constraintStart_toEndOf="@+id/textViewResultValue"
        app:layout_constraintTop_toTopOf="@+id/textViewResultValue" />

    <TextView
        android:id="@+id/textViewResultValue"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTestName"
        app:layout_constraintStart_toEndOf="@+id/textViewTestName"
        app:layout_constraintTop_toTopOf="@+id/textViewTestName" />

    <TextView
        android:id="@+id/textViewTestName"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>